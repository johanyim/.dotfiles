	2) ;;
	3) ;;
	4) ;;
	5) ;;
    6) ;;
    7) ;;
    8) ;;
    9) ;;
    10) ;;
esac

disk_used=$(df | awk '/dev\/nvme0n1p2/ {printf ("ó°»‚ %2.1f/%2.fGB",($3 / (1024*1024)),( $4 / (1024*1024)))}')
# Print the average CPU usage as a percentage
echo $disk_used

