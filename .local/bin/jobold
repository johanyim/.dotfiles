#!/bin/bash

date=$(date "+%d-%m-%Y")
site=$(echo -e "Google\nLinkedIn" | dmenu -p "Site found: ")
hours_ago=$(echo -e "" | dmenu -p "Hours ago: ")
site_directed=$(echo -e "" | dmenu -p "Site directed to: ")
company_name=$(echo -e "" | dmenu -p "Company name: ")
job_title=$(echo -e "Graduate Software Engineer\nGraduate Software Developer" | dmenu -p "Job title: ")
languages=$(echo -e "" | dmenu -p "Languages: ")
location=$(echo -e "London" | dmenu -p "Location: ")
salary_min=$(echo -e "" | dmenu -p "Salary (min): ")
salary_max=$(echo -e "" | dmenu -p "Salary (max): ")
easy_apply=$(echo -e "no\nyes" | dmenu -p "Easy apply?: ")
cover_letter=$(echo -e "no\nyes" | dmenu -p "Cover letter?: ")
additional_notes=$(echo -e "" | dmenu -p "Additional notes: ")


echo -e "$date,$site,$hours_ago,$site_directed,$company_name,$job_title,$languages,$location,$salary_min,$salary_max,$easy_apply,$cover_letter,$additional_notes;" >> ~/notes/jobhunt/job_log.csv



