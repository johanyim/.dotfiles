#!/bin/sh

# Prints all batteries, their percentage remaining and an emoji corresponding
# to charge status (ðŸ”Œ for plugged up, ðŸ”‹ for discharging on battery, etc.).

case $BLOCK_BUTTON in
	1) alacritty --class "FloatingClass" -T "Battery" -e btm --battery --default_widget_type batt -e;;
    2) pkill -RTMIN+9 dwmblocks;;
	3) ;;
	4) ;;
	5) ;;
	6) ;;
esac

# Loop through all attached batteries and format the info
for battery in /sys/class/power_supply/BAT?*; do
	# If non-first battery, print a space separator.
	[ -n "${capacity+x}" ] && printf " "	
	capacity="$(cat "$battery/capacity" 2>&1)"
    # ó°¢Ÿ  ó±Š¤  ó±Š¥  ó±Š¦  
    # ó°‚Ž  ó±Š¡  ó±Š¢  ó±Š£ 
    # Sets up the status and capacity
	case "$(cat "$battery/status" 2>&1)" in
		"Full") status="" ;;
		"Charging") status="ó°š¥" ;;
		"Discharging") status="" ;;
        "Critical") status="ó±ˆ¸" ;;
        "Not charging") status="" ;;
		"Unknown") status="ï„¨" ;;
		*) exit 1 ;;
	esac
    ending="%"
	case 1 in
	    $(( ${capacity} >= 99)) ) icon="ó±Ÿ¢" ; capacity="Full";ending="";;
	    $(( ${capacity} >= 70)) ) icon="ó±Š£"  ;;
	    $(( ${capacity} >= 30)) ) icon="ó±Š¢" ;;
	    $(( ${capacity} >= 1)) ) icon="ó±Š¡" ;;
	    * ) icon="ó°‚Ž " ;;
	esac
	printf "%s%s%s%s" "$status" "$icon" "$capacity" "$ending"

    
done && printf "\\n"
